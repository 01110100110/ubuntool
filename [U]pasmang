#!/bin/bash

# Prompt user for password length
echo "Enter desired password length:"
read length

# Prompt user for minimum number of special characters
echo "Enter minimum number of special characters:"
read special_characters

# Prompt user for minimum number of numeric characters
echo "Enter minimum number of numeric characters:"
read numeric_characters

# Set password requirements using user input
sed -i "s/^password.*/password        requisite                       pam_cracklib.so minlen=$length minclass=$special_characters minclass=$numeric_characters/" /etc/pam.d/common-password

# Confirm changes to user
echo "Password requirements have been updated based on your input."
